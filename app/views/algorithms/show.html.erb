<div class="min-vh-100 bg-light">
  <!-- Hero Section -->
  <div class="bg-white border-bottom py-5">
    <div class="container">
      <div class="text-center">
        <h1 class="display-4 font-weight-bold text-dark"><%= @algorithm.name %></h1>
        <p class="mt-3 mb-5 lead text-muted"><%= @algorithm.description %></p>
        <%= link_to "Back to Category", algorithm_category_path(@algorithm.algorithm_type.algorithm_category.slug), class: "btn btn-outline-primary btn-lg" %>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <main class="container py-5">
    <!-- Algorithm Details Section -->
    <div class="row justify-content-center">
      <div class="col-md-8">

        <!-- Algorithm Information -->
        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <h4 class="card-title text-center text-dark">Time Complexity</h4>
            <p><strong>Best Case:</strong> <%= @algorithm.time_complexity_best %></p>
            <p><strong>Average Case:</strong> <%= @algorithm.time_complexity_average %></p>
            <p><strong>Worst Case:</strong> <%= @algorithm.time_complexity_worst %></p>
          </div>
        </div>

        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <h4 class="card-title text-center text-dark">Space Complexity</h4>
            <p><%= @algorithm.space_complexity %></p>
          </div>
        </div>

        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <h4 class="card-title text-center text-dark">Difficulty Level</h4>
            <p><%= @algorithm.difficulty_level.capitalize %></p>
          </div>
        </div>

        <!-- Lists: Use Cases, Advantages, Disadvantages -->
        <div class="row">
          <div class="col-md-6">
            <div class="card shadow-sm mb-4">
              <div class="card-body">
                <h4 class="card-title text-center text-dark">Use Cases</h4>
                <ul class="list-unstyled">
                  <% @algorithm.use_cases.each do |use_case| %>
                    <li><i class="bi bi-check-circle-fill text-success"></i> <%= use_case %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>

          <div class="col-md-6">
            <div class="card shadow-sm mb-4">
              <div class="card-body">
                <h4 class="card-title text-center text-dark">Advantages</h4>
                <ul class="list-unstyled">
                  <% @algorithm.advantages.each do |advantage| %>
                    <li><i class="bi bi-check-circle-fill text-success"></i> <%= advantage %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>

          <div class="col-md-6">
            <div class="card shadow-sm mb-4">
              <div class="card-body">
                <h4 class="card-title text-center text-dark">Disadvantages</h4>
                <ul class="list-unstyled">
                  <% @algorithm.disadvantages.each do |disadvantage| %>
                    <li><i class="bi bi-x-circle-fill text-danger"></i> <%= disadvantage %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
