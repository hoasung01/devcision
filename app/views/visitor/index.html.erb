<div class="min-vh-100 bg-light">
  <!-- Hero Section -->
  <div class="bg-white border-bottom py-5">
    <div class="container">
      <div class="text-center">
        <h1 class="display-4 font-weight-bold text-dark">Devcision</h1>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <main class="container py-5">
    <!-- Algorithm Categories Section -->
    <section>
      <h2 class="text-center text-dark mb-4">Explore Algorithm Categories</h2>

      <!-- Algorithm Categories Grid -->
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% @algorithm_categories.each do |category| %>
          <div class="col">
            <div class="card shadow-sm h-100">
              <div class="card-body">
                <!-- Category Name -->
                <h3 class="card-title h5 text-dark"><%= category.name %></h3>

                <!-- Category Description -->
                <p class="card-text text-muted"><%= category.description %></p>

                <!-- Link to View Algorithms in Category -->
                <%= link_to "View Algorithms â†’", algorithm_category_path(category.slug), class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination for Algorithm Categories -->
      <div class="d-flex justify-content-center mt-4">
        <%= paginate @algorithm_categories %> <!-- Pagination for categories -->
      </div>
    </section>
  </main>
</div>
