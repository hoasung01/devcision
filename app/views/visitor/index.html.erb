<div class="min-vh-100 bg-light">
  <!-- Hero Section -->
  <div class="bg-white border-bottom py-5">
    <div class="container">
      <div class="text-center">
        <p class="lead text-muted mb-4">Understand complex concepts with ease through practical examples and real-world comparisons</p>

        <!-- Main Navigation Tabs -->
        <ul class="nav nav-pills justify-content-center" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active px-4 py-2"
                    data-bs-toggle="tab"
                    data-bs-target="#algorithms"
                    type="button">
              <i class="bi bi-code-slash me-2"></i>
              Algorithms
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link px-4 py-2"
                    data-bs-toggle="tab"
                    data-bs-target="#computer-units"
                    type="button">
              <i class="bi bi-cpu me-2"></i>
              Computer Units
            </button>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <main class="container py-5">
    <div class="tab-content">
      <!-- Algorithms Tab -->
      <%= render 'algorithms_tab', algorithm_categories: @algorithm_categories %>

      <!-- Computer Units Tab -->
      <%= render 'computer_units_tab', unit_categories: @unit_categories %>
    </div>
  </main>
</div>
